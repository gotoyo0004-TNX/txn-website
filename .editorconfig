# Editor configuration for TXN project
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{css,scss,less}]
indent_size = 2
# Allow unknown CSS at-rules (for Tailwind CSS v4)
insert_final_newline = true

[*.json]
indent_size = 2

[*.yml,*.yaml]
indent_size = 2

[*.toml]
indent_size = 2